# Laravel Delivery Dispatch - Production Environment Configuration
# Copy this file to /var/www/delivery-dispatch/.env and update the values

# Application
APP_NAME="Delivery Dispatch"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://api.yourcompany.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Generate using: php artisan key:generate
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=delivery_dispatch
DB_USERNAME=delivery_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# Cache & Session
CACHE_STORE=redis
CACHE_PREFIX=dd_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Broadcasting (Laravel Reverb)
BROADCAST_CONNECTION=reverb

# Laravel Reverb Configuration
REVERB_APP_ID=delivery-dispatch-app
REVERB_APP_KEY=base64:GENERATE_RANDOM_KEY_HERE
REVERB_APP_SECRET=GENERATE_RANDOM_SECRET_HERE
REVERB_HOST=127.0.0.1
REVERB_PORT=8080
REVERB_SCHEME=https
REVERB_ALLOWED_ORIGINS=https://delivery-dispatch-react.vercel.app

# CORS Configuration
FRONTEND_URL=https://delivery-dispatch-react.vercel.app

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Mail Configuration (Optional - for notifications)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yourcompany.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite (for asset compilation)
VITE_APP_NAME="${APP_NAME}"

# Laravel Telescope (Development/Staging Only)
TELESCOPE_ENABLED=false
TELESCOPE_PATH=telescope

# Laravel Pulse (Application Monitoring)
PULSE_ENABLED=true
PULSE_PATH=pulse

# Rate Limiting
THROTTLE_API=60,1
THROTTLE_GPS=120,1

# Additional Settings
FILESYSTEM_DISK=local
